#!/usr/bin/env bash
#Bash script displays all active IPv4 IPs on the machine itâ€™s executed on
interfaces=$(ifconfig -a | sed 's/[ \t].*//;/^\(lo:\|\)$/d')
for interface in $interfaces; do
  ipv4=$(ifconfig $interface | awk -F ' *|:' '/inet /{print $4}')
  if [[ -n "$ipv4" ]]; then
    echo $ipv4
  fi
done
